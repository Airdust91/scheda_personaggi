services:
  - type: web
    name: n8n-peregrine
    env: node
    buildCommand: npm run build
    startCommand: n8n start
    envVars:
      - key: N8N_BASIC_AUTH_ACTIVE
        value: "true"
      - key: N8N_BASIC_AUTH_USER
        value: "admin"
      - key: N8N_BASIC_AUTH_PASSWORD
        value: "una_password_sicura"
      - key: N8N_HOST
        value: "0.0.0.0"
      - key: N8N_PORT
        value: "5678"
      - key: GENERIC_TIMEZONE
        value: "Europe/Rome"
